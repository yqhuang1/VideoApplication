<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景颜色渐变 angle为渐变角度 -->
    <gradient
        android:angle="90"
        android:endColor="#c0000000"
        android:startColor="#c0000000" />
    <!-- 背景填充颜色 -->
    <solid android:color="#FFffffff" />
    <!-- 描边，边框宽度、颜色 -->
    <stroke
        android:width="1dp"
        android:color="@color/bg_gray" />
    <!-- 边角圆弧的半径 -->
    <corners android:radius="15dp" />
    <!-- 四周留出来的空白 -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

</shape>