                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="12sp"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:text="0"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:drawableLeft="@drawable/commet"-->
                    <!--/>-->

                    <TextView
                        android:id="@+id/home_item_time1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/collect_item_seletv_iv1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/btn_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/home_item_introduce1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/left_img_layout"
                android:ellipsize="end"
                android:lines="2"
                android:text=""
                android:textSize="13sp" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/left_delete_checkbox"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#00000000"
            android:button="@null"
            android:gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <FrameLayout
