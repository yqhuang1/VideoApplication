<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_body_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_discover_expert_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/expert_bg"
            android:scaleType="fitXY"
            android:src="@drawable/selector_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:layout_weight="214"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_discover_master_iv"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="1.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/master_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_pic" />

                <ImageView
                    android:id="@+id/fragment_discover_relaxe_iv"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/relaxe_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_pic" />

            </LinearLayout>

            <ImageView
                android:id="@+id/fragment_discover_game_circle_iv"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="180"
                android:background="@drawable/game_circle_bg"
                android:scaleType="fitXY"
                android:src="@drawable/selector_pic" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="大家还在看" />

            <TextView
                android:id="@+id/fragment_discover_change_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="换一批" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
