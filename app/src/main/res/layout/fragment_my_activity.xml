<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_body_bg"
    android:orientation="vertical">

    <com.li.videoapplication.View.RefreshListView
        android:id="@+id/fragment_my_activity_rListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@null"
        android:divider="@null"
        android:dividerHeight="2dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"></com.li.videoapplication.View.RefreshListView>

    <TextView
        android:id="@+id/fragment_my_activity_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/xlistview_empty_hint_text"
        android:visibility="gone" />
</LinearLayout>
