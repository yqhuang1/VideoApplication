<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btn_layout"
            android:background="@color/line" />

        <com.li.videoapplication.View.CircularImage
            android:id="@+id/game_circle_video_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/game_circle_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/game_circle_video_head"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/game_circle_video_updatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_circle_video_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/game_circle_video_head"
            android:text=""
            android:textSize="10sp" />

        <TextView
            android:id="@+id/game_circle_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/game_circle_video_head"
            android:layout_below="@+id/game_circle_video_head"
            android:layout_marginTop="8dp"
            android:text=""
            android:textSize="14sp" />

        <TextView
            android:id="@+id/game_circle_video_focus"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/unfocus_stroke_bg"
            android:gravity="center"
            android:text="+关注"
            android:textColor="#fb3d2e"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/game_circle_video_flag"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/game_circle_video_head"
            android:layout_below="@+id/game_circle_video_title"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/game_circle_video_flag"
            android:layout_marginTop="20dp"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/game_circle_video_flag"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/game_circle_video_prise"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/love_normal"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/game_circle_video_collect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/collect_normal"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/game_circle_video_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/game_circle_share"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/game_circle_video_comment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/game_circle_comment"
                    android:scaleType="centerInside" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btn_layout"
            android:background="@color/line" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/btn_layout"
            android:layout_marginTop="1dp"
            android:background="#f3f3f3" />

    </RelativeLayout>
</RelativeLayout>
