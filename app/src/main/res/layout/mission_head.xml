<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mission_head_RL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_body_bg"
    android:visibility="visible">


    <TextView
        android:id="@+id/mission_head_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:padding="2dp"
        android:text="新手任务"
        android:textColor="@color/gray3"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/mission_head_question_Iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/mission_head_tag"
        android:background="@drawable/questionmark"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mission_head_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/mission_head_img"
        android:padding="2dp"
        android:text="更多任务>>>"
        android:textColor="@color/bg"
        android:textSize="15sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/mission_head_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="2dp"
        android:src="@drawable/ex_smallimage"
        android:visibility="gone" />

</RelativeLayout>
