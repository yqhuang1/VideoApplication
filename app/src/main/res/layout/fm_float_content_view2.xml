<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fm_float_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bt_stop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bt_stop_down"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/float_layout_botton_SC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shears"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/bt_backHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bt_backhome"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/bt_pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bt_pause"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/bt_float_ico"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/fm_float_ico"
                android:gravity="center"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/record_anmin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_float_ico"
                android:layout_gravity="center"
                android:background="@drawable/float_recording_bg"
                android:maxLines="1"
                android:text="  0: 00"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>