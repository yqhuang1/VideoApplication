<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/record_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/search_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/search_btn">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/fragment_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/down_load_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.7"
            android:text="选择游戏"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="#f6f6f6">

        <LinearLayout
            android:id="@+id/fragment_search_et_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/search_store">

            <EditText
                android:id="@+id/search_edt"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="31"
                android:background="@color/white"
                android:hint="请输入搜索内容"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/whiteGray"
                android:textCursorDrawable="@drawable/cursor_shape"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/fm_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_linearlayout"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/fm_select_cancle" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fm_file_text1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="最近游戏"
            android:textColor="#15b4eb"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fm_file_text2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="热门游戏"
            android:textColor="@color/gray1"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fm_file_cursor"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/slip" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:scaleType="fitXY"
        android:src="@drawable/slip" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fm_file_vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>