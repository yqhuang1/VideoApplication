<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/discover_video_item_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_pic"
        android:padding="10dp">

        <ImageView
            android:id="@+id/discover_video_item_img"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/discover_video_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:lines="2"
                android:text="" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp">

                <com.li.videoapplication.View.CircularImage
                    android:id="@+id/discover_video_item_flag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:id="@+id/discover_video_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/discover_video_item_flag"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="昵称"
                    android:textColor="#bfbfbf"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/discover_video_item_flower"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:drawableLeft="@drawable/player_love_bg"
                    android:text="0"
                    android:textColor="#bfbfbf"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/discover_video_item_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:drawableLeft="@drawable/player_commet_bg"
                    android:text="0"
                    android:textColor="#bfbfbf"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
