<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_body_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/activity_video_manager_topFL"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/activity_video_manager_topTitleRL"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/activity_video_manager_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/search_btn"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/fragment_back" />

            <TextView
                android:id="@+id/activity_video_manager_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="视频管理"
                android:textColor="@color/video_manager_title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_video_manager_import"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/activity_video_manager_back"
                android:background="@drawable/white_btn_stroke"
                android:gravity="center"
                android:text="导入"
                android:textColor="@color/video_manager_title"
                android:visibility="visible" />

            <TextView
                android:id="@+id/activity_video_manager_editor"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/white_btn_stroke"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/video_manager_title"
                android:visibility="visible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/darkgray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_video_manager_topDelRL"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/activity_video_manager_tv_CntDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="选中了 0 项"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/activity_video_manager_btn_CancleDel"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="取 消"
                android:textColor="#ff1ba1d8"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/darkgray" />

        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/activity_video_manager_rl_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_video_manager_topFL">

        <com.li.videoapplication.View.SyncHorizontalScrollView
            android:id="@+id/activity_video_manager_mHsv"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@color/white"
            android:fadingEdge="none"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/activity_video_manager_rl_nav"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top">

                <RadioGroup
                    android:id="@+id/activity_video_manager_rg_nav_content"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_alignParentTop="true"
                    android:background="@color/white"
                    android:orientation="horizontal"></RadioGroup>

                <ImageView
                    android:id="@+id/activity_video_manager_iv_nav_indicator"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/main_title_bg"
                    android:scaleType="matrix" />
            </RelativeLayout>
        </com.li.videoapplication.View.SyncHorizontalScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/activity_video_manager_mHsv"
            android:background="@color/search_result_default" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/activity_video_manager_rl_tab"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_video_manager_sdcardsize_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:background="#e3e3e3"
            android:text="剩余空间"
            android:textSize="10sp"
            android:visibility="visible" />

        <com.li.videoapplication.View.CustomViewPager
            android:id="@+id/activity_video_manager_mViewPager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:background="@color/main_body_bg"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />

        <LinearLayout
            android:id="@+id/activity_video_manager_bottomLL"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/activity_video_manager_btn_SelAll"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_linearlayout"
                android:text="全选"
                android:textColor="#6e6e6e"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/fm_tab_line" />

            <Button
                android:id="@+id/activity_video_manager__btn_SaveToPhoto"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_linearlayout"
                android:text="保存到相册"
                android:textColor="#6e6e6e"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/fm_tab_line" />

            <Button
                android:id="@+id/activity_video_manager_btn_Del"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_linearlayout"
                android:text="删除"
                android:textColor="#FF0000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
