<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/list_selector_pic"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/game_assort_item_iv"
                android:layout_width="176dp"
                android:layout_height="99dp"
                android:background="@drawable/home_ad_default_bg"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/game_assort_item_tv"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/game_assort_item_iv"
                android:layout_alignLeft="@+id/game_assort_item_iv"
                android:background="#90ffffff"
                android:gravity="center_horizontal"
                android:text="棋牌桌游"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
