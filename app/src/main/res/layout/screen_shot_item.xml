<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/video_manager_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/screen_shot_flag_layout"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/stroke"
            android:padding="2dp">

            <ImageView
                android:id="@+id/screen_shot_item_flag"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:background="@drawable/radio_fra_bottom_bg"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/screen_shot_item_check"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/screen_shot_item_flag"
                android:layout_alignRight="@+id/screen_shot_item_flag"
                android:background="@drawable/btn_check"
                android:visibility="gone" />

            <TextView
                android:id="@+id/screen_shot_item_title"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/screen_shot_item_flag"
                android:padding="3dp"
                android:singleLine="true"
                android:text="ksdfjskgjsk"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/screen_shot_item_editor"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@+id/screen_shot_item_flag"
                android:layout_below="@+id/screen_shot_item_flag"
                android:background="@drawable/renamebtn" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/screen_shot_flag_layout"
            android:gravity="center">

            <TextView
                android:id="@+id/screen_shot_item_shot_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="截图于:2015-07-10 10:22"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/screen_shot_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screen_shot_item_shot_time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="大小:0K"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/screen_shot_item_share"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/screen_shot_item_size"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_red_stroke"
                android:gravity="center"
                android:text="分 享"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

    <CheckBox
        android:id="@+id/screen_shot_item_delete_checkbox"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#00000000"
        android:button="@null"
        android:gravity="center"
        android:visibility="gone" />
</FrameLayout>
