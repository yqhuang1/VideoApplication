<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/darkgray"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/my_matches_item_RL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/list_selector_pic"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/my_matches_item_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="80dp"
            android:layout_toRightOf="@+id/my_matches_item_img"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/my_matches_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="活动标题"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_matches_item_contentTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即上传视频，领取大奖！"
                    android:textColor="#37b6f1"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/my_matches_item_state_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@drawable/fm_checkbox_false"
            android:gravity="center"
            android:visibility="visible" />

    </RelativeLayout>
</LinearLayout>
