<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/my_activity_item_RL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/list_selector_pic"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/my_activity_item_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="80dp"
            android:layout_toRightOf="@+id/my_activity_item_img"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/my_activity_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="活动标题"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/my_activity_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="活动时间："
                android:textColor="#909090"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_activity_item_contentTxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你还没有上传视频，"
                    android:textColor="#909090"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/my_activity_item_contentTxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="立即上传"
                    android:textColor="@color/main_title_bg"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/my_activity_item_state_iv"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/my_activity_item_state_tv"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/corner_red_stroke"
            android:gravity="center"
            android:text="活动状态"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />

    </RelativeLayout>
</LinearLayout>
