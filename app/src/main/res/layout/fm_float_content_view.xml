<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fm_float_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/bt_starts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bt_start"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/float_layout_botton_SC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shears"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/bt_backHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bt_backhome"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/bt_float_ico"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/fm_float_ico"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>