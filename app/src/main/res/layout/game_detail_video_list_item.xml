<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/game_detail_item_video_iv"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_launcher"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/game_detail_item_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="《全民突击》腾讯首款3D枪战手游枪战手游"
            android:layout_marginTop="10dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/game_detail_item_collect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏 154"
            android:layout_below="@+id/game_detail_item_name_tv"
            android:layout_alignLeft="@+id/game_detail_item_name_tv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/game_detail_item_praise_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点赞 451"
            android:layout_below="@+id/game_detail_item_name_tv"
            android:layout_toRightOf="@+id/game_detail_item_collect_tv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

</LinearLayout>
