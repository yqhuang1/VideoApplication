<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#fe5540"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <!-- 圆角 -->
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <stroke
                android:width="1dp"
                android:color="#fe5540" />
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</selector>