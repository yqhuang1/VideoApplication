<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_body_bg"
    android:orientation="vertical"
    tools:context=".fragment.VideoFragment">

    <!--||||||||||||默认游戏视频列表、游戏简介页面的FrameLayout布局|||||||||||||-->
    <FrameLayout
        android:id="@+id/fragment_video_game_fl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/video_time_iv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/segmentred_left"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/video_hot_iv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/segmentwhite_right"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/video_time_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="最新视频"
                            android:textColor="@color/search_result_focus_white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/video_hot_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="热门排行"
                            android:textColor="@color/search_result_default"
                            android:textSize="15sp" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <!--||||||||||||游戏视频列表的FrameLayout布局|||||||||||||-->
        <FrameLayout
            android:id="@+id/frament_video_list_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:visibility="visible">

            <com.li.videoapplication.View.RefreshListView
                android:id="@+id/video_newest_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="none"
                android:visibility="visible">

            </com.li.videoapplication.View.RefreshListView>

            <com.li.videoapplication.View.RefreshListView
                android:id="@+id/video_hot_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="none"
                android:visibility="gone">

            </com.li.videoapplication.View.RefreshListView>

        </FrameLayout>

        <!--||||||||||||游戏简介页面的FrameLayout布局|||||||||||||-->
        <FrameLayout
            android:id="@+id/fragment_game_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/fragment_game_fl_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="    这款游戏还没有视频，上传相关视频可以获取丰厚的奖励哦~！"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/fragment_game_rl"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="60dp"
                android:background="@color/white"
                android:padding="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fragment_game_iv"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/fragment_game_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/fragment_game_iv"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="保卫萝卜"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/fragment_game_score_rb"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/fragment_game_name"
                    android:layout_below="@+id/fragment_game_name"
                    android:layout_marginTop="5dp"
                    android:numStars="5"
                    android:rating="3.0"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/fragment_game_downcount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/fragment_game_name"
                    android:layout_below="@+id/fragment_game_score_rb"
                    android:layout_marginTop="5dp"
                    android:text="350万下载"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/fragment_game_version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_game_score_rb"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/fragment_game_downcount_tv"
                    android:text="1.0.5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fragment_game_company_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_game_score_rb"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/fragment_game_version_tv"
                    android:text="光速工作室"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/fragment_game_download_btn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/fragment_game_name"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/green1"
                    android:focusable="false"
                    android:text="下载"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <ProgressBar
                    android:id="@+id/fragment_game_download_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:layout_alignBottom="@+id/fragment_game_download_btn"
                    android:layout_alignLeft="@+id/fragment_game_download_btn"
                    android:background="@color/gray1"
                    android:visibility="gone" />


            </RelativeLayout>

        </FrameLayout>
    </FrameLayout>

    <!--|||||||||||||游戏详情页面的FrameLayout布局||||||||||||||-->
    <FrameLayout
        android:id="@+id/fragment_game_detail_fl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/fragment_game_fl_back_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/fragment_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_game_fl_back_iv"
                android:text="详情"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/fragment_game_fl_back_iv"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/fragment_game_fl_game_rl"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/fragment_game_fl_game_iv"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/fragment_game_fl_game_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/fragment_game_fl_game_iv"
                    android:singleLine="true"
                    android:text="保卫萝卜"
                    android:textSize="15dp" />

                <RatingBar
                    android:id="@+id/fragment_game_fl_score_rb"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/fragment_game_fl_game_name"
                    android:layout_below="@+id/fragment_game_fl_game_name"
                    android:layout_marginTop="5dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/fragment_game_fl_down_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/fragment_game_fl_game_name"
                    android:layout_below="@+id/fragment_game_fl_score_rb"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/fragment_game_fl_game_iv"
                    android:text="350万人下载" />

                <TextView
                    android:id="@+id/fragment_game_fl_version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_game_fl_score_rb"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/fragment_game_fl_down_count_tv"
                    android:text="1.0.5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fragment_game_fl_company_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_game_fl_score_rb"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/fragment_game_fl_version_tv"
                    android:text="光速工作室"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/fragment_game_fl_game_download_btn"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/fragment_game_fl_game_name"
                    android:background="@color/green1"
                    android:text="下载"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <ProgressBar
                    android:id="@+id/fragment_game_fl_download_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="70dp"
                    android:layout_height="5dp"
                    android:layout_alignBottom="@+id/fragment_game_fl_game_download_btn"
                    android:layout_alignLeft="@+id/fragment_game_fl_game_download_btn"
                    android:background="@color/gray1"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/line" />

            </RelativeLayout>

            <TextView
                android:id="@+id/fragment_game_fl_introduction_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_game_fl_game_rl"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="  《全民突击》是一款3D枪战手游，详细页面除了下载链接之外，下方还附有相关的游戏简介，详细页面除了下载链接之外，下方还附有相关的游戏简介" />

        </RelativeLayout>

    </FrameLayout>


</LinearLayout>